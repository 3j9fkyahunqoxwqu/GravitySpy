#!/bin/bash -e

deactivate
virtualenv-2.7 ~/opt/GravitySpy-py27
. ~/opt/GravitySpy-py27/bin/activate
python -m pip install --upgrade --quiet pip
pip install .

deactivate
virtualenv-3.4 ~/opt/GravitySpy-py34
. ~/opt/GravitySpy-py34/bin/activate
python -m pip install --upgrade --quiet pip
pip install .
